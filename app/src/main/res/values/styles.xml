<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarBase" parent="ThemeOverlay.AppCompat.Light">
        <!--控制遮挡和背景色等-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <!--OverFlow图标style-->
        <item name="android:actionOverflowButtonStyle">@style/OverFlowMenuButton</item>
        <!--文字颜色-->
        <item name="android:textColor">@color/textblue</item>
    </style>

    <style name="OverFlowMenuButton">
        <!--替换需要的图标-->
        <item name="android:src">@drawable/caidan</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!--遮挡属性再次-->
        <item name="overlapAnchor">false</item>
        <!--<item name="android:popupBackground">?attr/colorPrimary</item>-->
    </style>


</resources>
