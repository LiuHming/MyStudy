<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ThemeSplash" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/kaiping</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ToolbarBase" parent="ThemeOverlay.AppCompat.Light">
        <!--控制遮挡和背景色等-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <!--OverFlow图标style-->
        <item name="android:actionOverflowButtonStyle">@style/OverFlowMenuButton</item>
        <!--文字颜色-->
        <item name="android:textColor">@color/textblue</item>
    </style>

    <style name="OverFlowMenuButton">
        <!--替换需要的图标-->
        <item name="android:src">@drawable/caidan</item>
    </style>

    <style name="OverflowMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <!--遮挡属性再次-->
        <item name="overlapAnchor">false</item>
        <!--<item name="android:popupBackground">?attr/colorPrimary</item>-->
    </style>

    <style name="style_smile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="style_text" parent="style_smile">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="style_text_small" parent="style_smile">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="style_text_black" parent="style_text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="style_text_white" parent="style_text">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_text_gray_small" parent="style_text_small">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="style_text_white_small" parent="style_text_small">
        <item name="android:textColor">@color/textwhite</item>
    </style>

</resources>
